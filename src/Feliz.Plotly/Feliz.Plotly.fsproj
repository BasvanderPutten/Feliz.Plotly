<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Fable bindings written in the Feliz-style for plotly.js</Description>
    <PackageLicenseUrl>https://github.com/Shmew/Feliz.Plotly/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>fsharp;fable;react;visualization;graph;chart</PackageTags>
    <Authors>Zaid Ajaj</Authors>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Colors.fs" />
    <Compile Include="Types.fs" />
    <Compile Include="Interop.fs" />
    <Compile Include="Bindings.fs" />
    <Compile Include="Props\Config.fs" />
    <Compile Include="Props\Data.fs" />
    <Compile Include="Props\Layout.fs" />
    <Compile Include="Plotly.fs" />
    <None Include="paket.references" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="*.fsproj; *.fs; *.js;" PackagePath="fable\" />
  </ItemGroup>
  
  <PropertyGroup>
    <NpmDependencies>
      <NpmPackage Name="plotly.js" Version="gte 1.5 lt 2" ResolutionStrategy="max" />
      <NpmPackage Name="react-plotly.js" Version="gte 2.3 lt 3" ResolutionStrategy="max" />
    </NpmDependencies>
  </PropertyGroup>
  
  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>
